<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hunofox.pictureselector">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".ui.PictureSelectActivity"/>
        <activity
            android:name=".ui.ShowPictureActivity"
            android:theme="@style/showPicTheme" />
        <activity
            android:name=".ui.EditPictureActivity"
            android:theme="@style/showPicTheme" />
        <activity
            android:name=".ui.ShowVideoActivity"
            android:theme="@style/showVideoTheme" />
    </application>

</manifest>