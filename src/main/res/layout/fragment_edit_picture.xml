<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_top"
        android:background="#b3111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawableLeft="@drawable/icon_title_leftarrow"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="取消"
            />

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:id="@+id/tv_confirm"
            android:paddingLeft="24dp"
            android:paddingRight="15dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:paddingBottom="8dp"
        android:paddingTop="10dp"
        android:id="@+id/rl_color"
        android:layout_above="@id/rl_bottom_color"
        android:background="#b3111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:id="@+id/color_orange"
            android:layout_width="22dp"
            android:layout_height="22dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/color_red"
            android:layout_width="22dp"
            android:layout_height="22dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/color_blue"
            android:layout_width="22dp"
            android:layout_height="22dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/color_green"
            android:layout_width="22dp"
            android:layout_height="22dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:id="@+id/color_white"
            android:layout_width="22dp"
            android:layout_height="22dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rl_bottom"
        android:layout_alignParentBottom="true"
        android:background="#b3111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:textSize="12sp"
            android:drawableTop="@drawable/image_picture_undo"
            android:drawablePadding="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_undo1"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="撤销"
            android:textColor="#ffffff"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:textSize="12sp"
            android:drawableTop="@drawable/image_picture_edit_text"
            android:drawablePadding="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_text"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="文字"
            android:textColor="#ffffff"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:drawableTop="@drawable/image_picture_edit_edit"
            android:drawablePadding="8dp"
            android:id="@+id/tv_pen"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="画笔"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rl_bottom_color"
        android:layout_alignParentBottom="true"
        android:background="#b3111111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:drawableTop="@drawable/image_picture_edit_color_back"
            android:drawablePadding="8dp"
            android:id="@+id/tv_back"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="返回"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:textSize="12sp"
            android:drawableTop="@drawable/image_picture_undo"
            android:drawablePadding="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_undo"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="撤销"
            android:textColor="#ffffff"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/layout_color"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/iv_color"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="颜色"
                android:textColor="#ffffff"
                />
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>